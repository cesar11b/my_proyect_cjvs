datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User{

id Int @id @default(autoincrement())
email String @unique
name  String?
password String
telephone String?
createdAt DateTime @default(now())
updateAt DateTime @updatedAt
role Role @default(USER)
}

model Tenant{
  id Int @id @default(autoincrement())
  name String?
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}


